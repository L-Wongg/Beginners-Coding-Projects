# Module: Code that someone else has written that you can reuse in your programs
# turtle.speed('slowest')
# turtle.speed('fastest')
import turtle

turtle.color('red', 'pink')
turtle.begin_fill()

turtle.speed('slowest')
turtle.forward(100)
turtle.right(90)

turtle.forward(100)
turtle.right(90)

turtle.forward(100)
turtle.right(90)

turtle.forward(100)
turtle.right(90)

turtle.end_fill()

turtle.done()


